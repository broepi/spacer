.PHONY : all, rebuild, clean
all : build/spacer
rebuild : clean all
clean :
	-rm -R build/*
# main target
build/spacer : build/bpgw/camera2d.o build/bpgw/updatemanager.o build/bpgw/display.o build/bpgw/texture.o build/bpgw/sprite.o build/bpgw/vector2d.o build/bpgw/font.o build/bpgw/drawmanager.o build/bpgw/game.o build/bpgw/texturemanager.o build/bpgw/eventmanager.o build/bpgw/color.o build/bpgw/utils.o build/bpgw/stage.o build/starfield.o build/radar.o build/spacer.o build/playership.o build/cloud.o | build/
	g++ -o build/spacer $(shell freetype-config --libs) build/bpgw/camera2d.o build/bpgw/updatemanager.o build/bpgw/display.o build/bpgw/texture.o build/bpgw/sprite.o build/bpgw/vector2d.o build/bpgw/font.o build/bpgw/drawmanager.o build/bpgw/game.o build/bpgw/texturemanager.o build/bpgw/eventmanager.o build/bpgw/color.o build/bpgw/utils.o build/bpgw/stage.o build/starfield.o build/radar.o build/spacer.o build/playership.o build/cloud.o -lSDL2 -lSDL2_image -lGL
# object targets
